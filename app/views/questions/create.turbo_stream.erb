<div id="answer">
  <p><%= @answer %></p>
  
  <% if @video_url.present? %>
    <video controls autoplay width="640">
      <source src="<%= @video_url %>" type="video/mp4">
      Your browser does not support the video tag.
    </video>
  <% else %>
    <p>No video available.</p>
  <% end %>
</div>